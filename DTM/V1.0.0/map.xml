<?xml version="1.0"?>
<map proto="1.3.4">
<name>Strata</name>
<version>1.0.0</version>
<objective>
    Destroy 90% of the enemy's monument pillar to win!
</objective>
<authors>
    <author>Captain_Elliott</author>
    <author>_IQ</author>
    <author>Timothee38</author>
</authors>
<contributors>
    <contributor contribution="Feedback">Tywnis</contributor>
    <contributor contribution="Feedback">orky48</contributor>
    <contributor contribution="Minor Building">ZExLegacy</contributor>
    <contributor contribution="Feedback">DiamondAx</contributor>
</contributors>
<broadcasts>
    <alert after="5s">You do not do TNT damage on your own teams side</alert>
    <alert after="10s">The Ground Will renew</alert>
</broadcasts>
<teams>
    <team color="dark red" max="25">Purple Team</team>
    <team color="dark green" max="25">Green Team</team>
</teams>
<spawns>
    <spawn team="red" kit="red" yaw="0">
        <cylinder base="-7.5,3.5,-76.5" radius="1" height="1"/>
    </spawn>
    <spawn team="green" kit="green" yaw="180">
        <cylinder base="-7.5,3.5,44.5" radius="1" height="1"/>
    </spawn>
    <default yaw="-90">
        <cylinder base="-46.5,23,-16" radius="2" height="1"/>
    </default>
</spawns>
<kits>
    <kit name="spawn">
        <item slot="0" damage="-3000">iron sword</item>
        <item slot="1" enchantment="arrow infinite:1" damage="-3000">bow</item>
        <item slot="2" damage="-3000">diamond  pickaxe</item>
        <item slot="3" enchantment="durability:3" damage="-3000">iron axe</item>
        <item slot="4" amount="64">smooth brick</item>
        <item slot="5" amount="64">glass</item>
        <item slot="6" amount="16">log:2</item>
        <item slot="8" amount="64">golden carrot</item>
        <item slot="28">arrow</item>
        <item slot="31" amount="32">smooth brick</item>
        <chestplate enchantment="protection explosions:3">chainmail chestplate</chestplate>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="dd2626" damage="-3000">leather helmet</helmet>
    </kit>
    <kit name="green" parents="spawn">
        <helmet color="008000" damage="-3000">leather helmet</helmet>
    </kit>
</kits>
<filters>
    <filter name="only-red">
        <team>red</team>
    </filter>
    <filter name="only-green">
        <team>green</team>
    </filter>
    <filter name="note">
        <not>
            <block>note block</block>
        </not>
    </filter>
    <filter name="no-tnt">
        <not>
            <cause>Explosion</cause>
        </not>
    </filter>
    <filter name="no-green-tnt">
        <not>
            <all>
                <team>green</team>
                <cause>Explosion</cause>
            </all>
        </not>
    </filter>
    <filter name="no-red-tnt">
        <not>
            <all>
                <team>red</team>
                <cause>Explosion</cause>
            </all>
        </not>
    </filter>
    <filter name="only-tnt">
        <cause>Explosion</cause>
    </filter>
    <filter name="no-water">
        <deny>
            <any>
                <block>water</block>
                <block>stationary water</block>
            </any>
        </deny>
    </filter>
    <filter name="only-iron">
        <any>
            <block>iron block</block>
        </any>
    </filter>
</filters>
<region>
    <rectangle name="playable" min="20,4,-62" max="-35,4,30"/>
    <cuboid name="red-spawn-tunnel" min="-30,3,-62" max="18,14,-82"/>
    <cuboid name="green-spawn-tunnel" min="16,3,30" max="-33,14,49"/>
    <cuboid name="green-outer-mon" min="2,3,26" max="-13,28,16"/>
    <cuboid name="red-outer-mon" min="-13,3,59" max="-2,29,-48"/>
    <cuboid name="green-mon" min="-4,1,18" max="-11,28,25"/>
    <cuboid name="red-mon" min="-11,1,-50" max="-4,28,-57"/>
    <rectangle name="green-side" min="-35,4,30" max="19,4,-1"/>
    <rectangle name="red-side" min="20,4,-62" max="-35,4,-31"/>
    <apply block="only-tnt" message="You may only break the monuments with TNT!">
        <region name="green-mon"/>
        <region name="red-mon"/>
    </apply>
    <apply block="no-green-tnt">
        <region name="green-side"/>
    </apply>
    <apply block="no-red-tnt">
        <region name="red-side"/>
    </apply>
    <apply block="no-water" message="You may not water your own side and TNT Cannons don't need water">
        <region name="playable"/>
    </apply>
    <apply enter="only-green" message="You may not enter the enemy spawn!">
        <region name="green-spawn-tunnel"/>
    </apply>
    <apply enter="only-red" message="You may not enter the enemy spawn!">
        <region name="red-spawn-tunnel"/>
    </apply>
    <apply block="deny-all">
        <region name="green-spawn-tunnel"/>
        <region name="red-spawn-tunnel"/>
    </apply>
    <apply block="deny-all">
        <negative>
            <region name="playable"/>
        </negative>
    </apply>
</region>
<renewables>
    <renewable rate="2.5" grow="true" particles="true" sound="true" avoid-entities="true">
        <region>
            <region name="playable"/>
        </region>
        <renew>sandstone</renew>
        <renew>log</renew>
        <renew>fence</renew>
        <renew>leaves</renew>
        <renew>step:1</renew>
        <renew>wood step</renew>
        <renew>wood step:1</renew>
        <renew>workbench</renew>
        <renew>piston base</renew>
        <renew>birch wood stairs</renew>
        <renew>stained clay:14</renew>
        <renew>stained clay:6</renew>
        <renew>note block</renew>
        <renew>wood:1</renew>
        <renew>glowstone</renew>
        <renew>stained clay:13</renew>
        <renew>stained clay:5</renew>
    </renewable>
</renewables>
<destroyables owner="green" material="coal block, stained clay:4">
    <destroyable name="Pillar">
        <region name="green-mon"/>
    </destroyable>
</destroyables>
<destroyables owner="red" materials="coal block, stained clay:4">
    <destroyable name="Pillar">
        <region name="red-mon"/>
    </destroyable>
</destroyables>
<itemremove>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>iron axe</item>
    <item>sandstone</item>
    <item>stained clay:14</item>
    <item>stained clay:13</item>
    <item>stained clay:5</item>
    <item>stained clay:6</item>
    <item>log</item>
    <item>birch wood stair</item>
    <item>piston base</item>
    <item>glowstone</item>
    <item>leaves</item>
    <item>wood step</item>
    <item>wood step:1</item>
    <item>step:1</item>
    <item>noteblock</item>
</itemremove>
<maxbuildheight>26</maxbuildheight>
</map>