<?xml version="1.0" encoding="UTF-8"?>
<map proto="1.3.6">
<name>Genesis</name>
<version>1.0</version>
<objective>Destroy the enemy's emerald and end stone monuments.</objective>
<authors>
    <author contribution="Design, building, and XML">Noah_the_Boah</author>
</authors>
<rules>
    <rule>No team griefing!</rule>
</rules>
<timelock>on</timelock>
<maxbuildheight>45</maxbuildheight>
<teams>
    <team color="dark red" max="14">Red Team</team>
    <team color="blue" max="14">Blue Team</team>
</teams>
<toolrepair>
    <item>stone sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
</toolrepair>
<itemremove>
    <item>glowstone dust</item>
    <item>string</item>
    <item>emerald block</item>
    <item>ender stone</item>
</itemremove>
<tnt>
    <power>1.0</power>
</tnt>
<filters>
    <filter name="only-gold-blocks">
        <not>
            <block>gold block</block>
        </not>
    </filter>
</filters>
<regions>
    <apply block="deny-all" message="You may not modify outside the play field!">
        <negative>
            <cuboid name="play-area" min="19,-oo,139" max="-18,oo,-145"/>
        </negative>
    </apply>
    <apply block-place="deny-all" block-break="only-gold-block" message="You may not modify a team base!">
        <union name="bases">
            <cuboid name="blue-base" min="18,0,-109" max="-18,50,-144"/>
            <cuboid name="red-base" min="-18,0,103" max="18,50,137"/>
        </union>
        <tnt>
            <power>0.0</power>
        </tnt>
        <disabledamage>
            <damage ally="true" self="false" enemy="false" other="false">block explosion</damage>
            <damage>entity attack</damage>
            <damage>projectile</damage>
        </disabledamage>
    </apply>
</regions>
<kits>
    <kit name="spawn">
        <item slot="0">stone sword</item>
        <item slot="1">bow</item>
        <item slot="28" amount="64">arrow</item>
        <item slot="2"  enchantment="durability:3;dig speed:2">diamond pickaxe</item>
        <item slot="4" amount="4">web</item>
        <item slot="5" amount="32">cooked chicken</item>
        <item slot="6" amount="1">water bucket</item>
        <item slot="33" amount="32">stone button</item>
        <item slot="7" amount="32">ladder</item>
        <item slot="34" amount="32">redstone</item>
        <potion duration="3" amplifier="3">damage resistance</potion>
        <potion duration="3" amplifier="3">heal</potion>
    </kit>
    <kit name="blue" parents="spawn">
        <item slot="3" amount="64" damage="11">stained clay</item>
        <item slot="30" amount="64" damage="11">stained clay</item>
    </kit>
    <kit name="red" parents="spawn">
        <item slot="3" amount="64" damage="14">stained clay</item>
        <item slot="30" amount="64" damage="14">stained clay</item>
    </kit>
</kits>
<spawns>
    <spawn team="blue" kit="blue" yaw="0"><cylinder base="0,11.5,-134" radius="1.5" height="0"/></spawn>
    <spawn team="red" kit="red" yaw="180"><cylinder base="0,11.5,127" radius="1.5" height="0"/></spawn>
    <default yaw="90"><cylinder base="44.5,7,-3" radius="2" height="0"/></default>
</spawns>
<destroyables name="Right Monument" materials="ender stone" completion="100%">
    <destroyable owner="blue"><cuboid min="6,7,-34" max="10,12,-38"/></destroyable>
    <destroyable owner="red"><cuboid min="-6,7,27" max="-10,12,31"/></destroyable>
</destroyables>
<destroyables name="Left Monument" materials="ender stone" completion="100%">
    <destroyable owner="blue"><cuboid min="-10,7,-34" max="-6,12,-38"/></destroyable>
    <destroyable owner="red"><cuboid min="10,7,27" max="6,12,31"/></destroyable>
</destroyables>
<destroyables name="Back Monument" materials="emerald block" completion="100%">
    <destroyable owner="blue"><cuboid min="-2,11,-77" max="2,16,-81"/></destroyable>
    <destroyable owner="red"><cuboid min="2,11,70" max="-2,16,74"/></destroyable>
</destroyables>
</map>