<?xml version="1.0"?>
<map proto="1.3.3">
	<name>Halcyon</name>
	<version>1.0.4</version>
	<objective>Destroy both of the enemy's monuments to win!</objective>
	<authors>
		<author uuid="8242e55ecc6a458ab272a2b34918045f"/>
		<!-- keenan -->
	</authors>
	<teams>
		<team color="purple" max="18">Purple Team</team>
		<team color="dark red" max="18">Red Team</team>
	</teams>
	<spawns>
		<spawn team="purple" kit="both" yaw="0">
			<point>14,75,-871</point>
		</spawn>
		<spawn team="red" kit="both" yaw="180">
			<point>14,75,-761</point>
		</spawn>
		<default yaw="-90">
			<point>-34,85,-816</point>
		</default>
	</spawns>
	<kits>
		<kit name="both">
			<item slot="0">stone sword</item>
			<item slot="1" enchantment="arrow infinte">bow</item>
			<item slot="28">arrow</item>
			<item slot="2" enchantment="dig speed">diamond pickaxe</item>
			<item slot="3">stone axe</item>
			<item slot="4" amount="64">apple</item>
			<item slot="5" amount="1">golden apple</item>
			<item slot="6" amount="32">log</item>
			<item slot="8" amount="64">glass</item>
		</kit>
		<kit name="purple-spawn" parents="both">
			<helmet color="AA00AA" damage="-3000">leather helmet</helmet>
			<chestplate color="AA00AA" damage="-3000">leather chestplate</chestplate>
			<leggings color="AA00AA" damage="-3000">leather leggings</leggings>
			<boots color="AA00AA" damage="-3000">leather boots</boots>
		</kit>
		<kit name="red-spawn" parents="both">
			<helmet color="AA0000" damage="-3000">leather helmet</helmet>
			<chestplate color="AA0000" damage="-3000">leather chestplate</chestplate>
			<leggings color="AA0000" damage="-3000">leather leggings</leggings>
			<boots color="AA0000" damage="-3000">leather boots</boots>
		</kit>
	</kits>
	<destoyables name="Monument" materials="obsidian">
		<destroyable owner="red">
			<point>41,74,-773</point>
		</destroyable>
		<destroyable owner="purple">
			<point>-13,74,-861</point>
		</destroyable>
	</destoyables>
	<destoyables name="Monument" materials="obsidian">
		<destroyable owner="red">
			<point>-13,74,-773</point>
		</destroyable>
		<destroyable owner="purple">
			<point>41,74,-861</point>
		</destroyable>
	</destoyables>
	<kill-rewards>
		<kill-reward>
			<item amount="4" material="arrow"/>
			<item amount="1" material="golden apple"/>
		</kill-reward>
	</kill-rewards>
	<filters>
		<team id="only-red">red</team>
		<team id="only-purple">purple</team>
	</filters>
	<regions>
		<cylinder id="red-spawn" base="14,70,-762" radius="8" height="12"/>
		<apply block="never" enter="only-red" region="red-spawn" message="You can not enter here."/>
		<cylinder id="purple-spawn" base="14,70,-872" radius="8" height="12"/>
		<apply block="never" enter="only-red" region="red-spawn" message="You can not enter here."/>
	</regions>
	<itemremove>
		<item>leather helmet</item>
		<item>leather chestplate</item>
		<item>leather leggings</item>
		<item>leather boots</item>
		<item>apple</item>
		<item>arrow</item>
		<item>log</item>
		<item>wood</item>
	</itemremove>
	<toolrepair>
		<tool>bow</tool>
		<tool>stone sword</tool>
		<tool>diamond pickaxe</tool>
		<tool>stone axe</tool>
	</toolrepair>
</map>
