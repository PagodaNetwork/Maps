<?xml version="1.0"?>
<map proto="1.3.3">
<name>Beyond TE</name>
<version>1.0.0</version>
<objective>Leak lava from the enemy's obsidian core and break the enemy's monument.</objective>
<authors>
    <author uuid="c26e7a7f-b4ce-4ebc-ac4d-f60691915d23"/> <!-- Kroest -->
</authors>

<contributors>
	<contributor uuid="dff980ed-9f69-491e-b79c-30c21350baf2" contribution="Some building help"/> <!-- DoomyBoy -->
</contributors>

<rules>
    <rule>Dispensers, repeaters, and redstone torches are disabled</rule>
</rules>
<teams>
    <team color="red" max="7">Red</team>
    <team color="green" max="7">Green</team>
</teams>
<kits>
    <kit name="give-resistance" force="true">
        <potion duration="5" amplifier="3">damage resistance</potion>
    </kit>
</kits>
<filters>
    <filter name="deny-redstone">
        <deny>
            <block>dispenser</block>
            <block>redstone torch on</block>
            <block>diode block on</block>
            <block>diode block off</block>
        </deny>
    </filter>
</filters>
<regions>
    <rectangle name="play" min="52,47" max="-53,-38"/>
    <rectangle name="green-drop" min="-19,37" max="-24,42"/>
    <rectangle name="red-drop" min="18,-28" max="23,-33"/>
    <apply block="deny-all" message="You may not block off the spawn drop.">
        <region name="green-drop"/>
        <region name="red-drop"/>
    </apply>
    <apply block-place="deny-redstone" message="You cannot use dispensers, repeaters, or redstone torches!">
        <region name="play"/>
    </apply>
    <apply block="deny-all" message="You may not interact with blocks outside the playing field.">
        <negative>
            <region name="play"/>
        </negative>
    </apply>
</regions>
<maxbuildheight>30</maxbuildheight>
<spawns>
    <spawn team="red" yaw="0" kit="give-resistance">
        <cylinder base="20.5,35.5,-56.5" radius="1" height="0"/>
    </spawn>
    <spawn team="green" yaw="180" kit="give-resistance">
        <cylinder base="-21.5,35.5,65.5" radius="1" height="0"/>
    </spawn>
    <default yaw="90">
        <cylinder base="68,33,0.5" radius="1" height="0"/>
    </default>
</spawns>
<modes>
    <mode material="gold block" after="10m" name="GOLD CORE MODE"/>
    <mode material="glass" after="20m" name="GLASS CORE MODE"/>
</modes>
<cores material="obsidian" leak="5" mode-changes="true">
    <core team="red">
        <cuboid min="2,12,-27" max="-3,8,-22"/>	
    </core>
    <core team="green">
        <cuboid min="-3,12,36" max="2,8,31"/>
    </core>
</cores>
<destroyables materials="ender stone" completion="100%">
    <destroyables owner="red">
        <destroyable name="Monument">
            <cuboid min="46,10,-32" max="43,6,-29"/>
        </destroyable>
    </destroyables>
    <destroyables owner="green">
        <destroyable name="Monument">
            <cuboid min="-44,10,38" max="-47,6,41"/>
        </destroyable>
    </destroyables>
</destroyables>
<itemremove>
    <item>obsidian</item>
    <item>gold block</item>
    <item>shears</item>
    <item>coal</item>
</itemremove>
<time result="objectives">45m</time>
</map>
