<map proto="1.4.0">
	<time result="objectives">45m</time>
	<name>Cyanide</name>
	<version>1.0.0</version>
	<objective>Leak lava from the enemy's obsidian core and break their 2 monuments</objective>
	
	<authors>
		<author uuid="61f8e9dd-62ab-453a-b7ef-83ce8a383fe8"/><!--Campeh-->
		<author uuid="b20e68ac-3700-45c6-a53f-5fec0eb2aaa1"/><!--Pedrah-->
		<author uuid="dd43251f-f339-4b28-ac3e-fd12f79d8151"/><!--Laeh-->
	</authors>
	<contributors>
		<contributor uuid="e82603df-417d-4a95-bd1f-1720648be0b4" contribution="XML"/> <!-- Pablete1234 -->
		<contributor uuid="f2c6cdb3-7336-4599-853e-e6fba640eb88" contribution="Building help"/> <!-- lSloh -->
		<contributor uuid="eaf0ae5a-e001-47a6-85d0-003eb9e82b4c" contribution="Building help"/> <!-- Ronaa -->
	</contributors>
	
	<teams>
		<team id="blue" color="blue" max="8">Blue</team>
		<team id="red" color="dark red" max="8">Red</team>
	</teams>
	
	<spawns yaw="90">
		<spawn team="red" filter="red-emerald-filter">
			<regions>
				<cuboid min="7.5,53.0,-85.5" max="9.5,53.0,-83.5" />
			</regions>
		</spawn>
		<spawn team="red">
			<regions>
				<cuboid min="-7.5,53.0,-85.5" max="-5.5,53.0,-83.5" />
			</regions>
		</spawn>
		<spawn team="blue" filter="blue-emerald-filter">
			<regions>
				<cuboid min="7.5,53.0,-27.5" max="9.5,53.0,-25.5" />
			</regions>
		</spawn>
		<spawn team="blue">
			<regions>
				<cuboid min="-7.5,53.0,-27.5" max="-5.5,53.0,-25.5" />
			</regions>
		</spawn>
		<default>
			<regions>
				<cylinder base="-29.5,53,-55.5" radius="2" height="0" />
			</regions>
		</default>
	</spawns>
	
	<kits>
		<kit id="resist">
			<potion duration="5" amplifier="2">damage_resistance</potion>
		</kit>
	</kits>
	<regions>
		<union id="water-drops">
				<rectangle id="red-water-drop" min="-55.0,-88.0" max="-48.0,-81.0"/>
				<rectangle id="blue-water-drop" min="-55.0,-30.0" max="-48.0,-23.0"/>
		</union>
		<apply region="water-drops" block="never" message="You may not place or break blocks in the water drops."/>
		
		<negative id="exit-spawn">
			<union id="spawn-areas">
				<cuboid id="red-tunnel" min="-47.0,52.0,-87.0" max="11.0,oo,-82.0"/>
				<cuboid id="blue-tunnel" min="-47.0,52.0,-29.0" max="11.0,oo,-24.0"/>
				<cuboid id="obs-spawn" min="-34.0,49.0,-60.0" max="-26.0,oo,-51.0"/>
			</union>
		</negative>
		<apply region="spawn-areas" enter="never" message="You may not re-enter the spawn area!"/>
		<apply region="exit-spawn" kit="resist"/>
		
		<negative id="outside">
			<cuboid id="play" min="-126.0,-oo,-128.0" max="-40.0,38,17.0"/>
		</negative>
		<apply region="outside" block="never" message="You may not interact with blocks outside the playing field."/>
		
		<!-- Objectives -->

		<cuboid id="red-obsidian-core" min="-107.0,20.0,-87.0" max="-102.0,25,-82.0"/>
		<cuboid id="blue-obsidian-core" min="-107.0,20.0,-29.0" max="-102.0,25,-24.0"/>
		
		<cuboid id="red-gold-core" min="-107.0,40.0,-87.0" max="-102.0,45.0,-82.0"/>
		<cuboid id="blue-gold-core" min="-107.0,40.0,-29.0" max="-102.0,45.0,-24.0"/>
		
		<cuboid id="red-packedice-core" min="-107.0,45.0,-87.0" max="-102.0,50.0,-82.0"/>
		<cuboid id="blue-packedice-core" min="-107.0,45.0,-29.0" max="-102.0,50.0,-24.0"/>
		
		<cuboid id="red-center" min="-89.0,29.0,-87.0" max="-84.0,34.0,-82.0"/>
		<cuboid id="blue-center" min="-89.0,29.0,-29.0" max="-84.0,34.0,-24.0"/>

		<cuboid id="red-emerald" min="-67.0,26.0,-93.0" max="-62.0,31.0,-88.0"/>
		<cuboid id="blue-emerald" min="-67.0,26.0,-29.0" max="-62.0,31.0,-18.0"/>
		
	</regions>
	<filters>
		<objective id="red-emerald-filter">emerald-red</objective>
		<objective id="red-center-filter">center-red</objective>
		<objective id="blue-emerald-filter">emerald-blue</objective>
		<objective id="blue-center-filter">center-blue</objective>
		<all id="red-packedice-filter">
			<objective>emerald-red</objective>
			<objective>center-red</objective>
		</all>
		<all id="blue-packedice-filter">
			<objective>emerald-blue</objective>
			<objective>center-blue</objective>
		</all>
	</filters>
	
	<cores material="obsidian" leak="3" mode-changes="false">
		<core id="core-red" team="red" region="red-obsidian-core"/>
		<core id="core-blue" team="blue" region="blue-obsidian-core"/>
	</cores>

	<modes>
    	<mode after="10m" material="gold block"/>
	</modes>
	
	<destroyables>
		<destroyable region="red-emerald" id="emerald-red" name="Emerald Monument" materials="emerald_block;beacon" owner="red"/>
		<destroyable region="red-center" id="center-red" name="Center Monument" materials="obsidian;beacon" mode-changes="true" owner="red" required="false"/>
		<destroyable region="blue-emerald" id="emerald-blue" name="Emerald Monument" materials="emerald_block;beacon" owner="blue"/>
		<destroyable region="blue-center" id="center-blue" name="Center Monument" materials="obsidian;beacon" mode-changes="true" owner="blue" required="false"/>
	</destroyables>
	
	<structures>
		<structure id="red-gold-core-structure" region="red-gold-core"/>
		<structure id="red-packedice-core-structure" region="red-packedice-core"/>
		<structure id="blue-gold-core-structure" region="blue-gold-core"/>
		<structure id="blue-packedice-core-structure" region="blue-packedice-core"/>
		
		<dynamic offset="0,-20,0" structure="red-gold-core-structure" filter="red-center-filter"/>
		<dynamic offset="0,-25,0" structure="red-packedice-core-structure" filter="red-packedice-filter"/>
		<dynamic offset="0,-20,0" structure="blue-gold-core-structure" filter="blue-center-filter"/>
		<dynamic offset="0,-25,0" structure="blue-packedice-core-structure" filter="blue-packedice-filter"/>
	</structures>
	
	<itemremove>
		<item>prismarine_crystals</item>
		<item>emerald_block</item>
		<item>gold_block</item>
		<item>cobblestone</item>
		<item>obsidian</item>
	</itemremove>
	<maxbuildheight>43</maxbuildheight>
	<timelock>on</timelock>
	
</map>