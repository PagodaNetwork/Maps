<?xml version="1.0"?>
<map proto="1.3.2">
<name>Iced Wars</name>
<version>1.0</version>
<objective>Leak the core and capture the two wools.</objective>
<authors>
    <author>Sharpie</author>
	<author>SrHappyKiller</author>

</authors>
<contributors>
    <contributor>xKenrooy</contributor>
	<contributor>GeRa_CuLe</contributor>
	<contributor>xDofah_PvP</contributor>
</contributors>
<teams>
    <team color="dark red" max="16">Red Team</team>
    <team color="blue" max="16">Blue Team</team>
</teams>
<spawns kit="spawn">
    <spawn team="blue" yaw="180">
        <cuboid min="-0,10,51" max="5,10,45"/>
    </spawn>
    <spawn team="red" yaw="0">
        <cuboid min="-1,10,-94" max="4,10,-88"/>
    </spawn>
    <default yaw="0">
        <cylinder base="-34,56,-21" radius="3" height="0"/>
    </default>
</spawns>
<kits>
        <kit name="spawn">
            <item slot="0">iron sword</item>
            <item slot="1">bow</item>
            <item slot="2" amount="64">arrow</item>
			<item slot="3" amount="64">arrow</item>
            <item slot="4" enchantment="durability:1;dig speed:1">diamond pickaxe</item>
            <item slot="5" enchantment="durability:3;dig speed:1">iron spade</item>
            <item slot="6" amount="64" damage="2">log</item>
            <item slot="7" amount="64">glass</item>
            <item slot="8" amount="64">golden carrot</item>
            <item slot="9" >bucket</item>
        </kit>
    </kits>
<regions>
    <union name="outside-map-b">
        <negative name="outside-map-a">
            <rectangle name="map" min="-85,-111" max="89,68"/>
        </negative>
        <cuboid name="above-80" min="-oo,81,-oo" max="oo,oo,oo"/>
    </union>
    <apply block="deny-all" message="You may not edit the spawn pools">
        <cuboid min="21,10,-76" max="-18,10,-102"/>
        <cuboid min="17,10,33" max="22,10,59"/>
    </apply>
    <apply block="deny-all" message="You cannot build/modify here!">
        <region name="outside-map-b"/>
    </apply>
	<union name="blue-wool-rooms">
			<rectangle name="green-room" min="71,5,-61" max="89,17,-71"/>
			<rectangle name="yellow-room" min="-67,5,-71" max="-85,17,-61"/>
		</union>
		<apply block="only-blue" use="only-blue">
			<rectangle name="green-room" min="71,5,-61" max="89,17,-71"/>
			<rectangle name="yellow-room" min="-67,5,-71" max="-85,17,-61"/>
		</apply>
		<apply enter="only-blue" message="You may not enter your own wool room!">
			<rectangle name="green-room" min="71,5,-61" max="89,17,-71"/>
			<rectangle name="yellow-room" min="-67,5,-71" max="-85,17,-61"/>
		</apply>
		<union name="red-wool-rooms">
			<rectangle name="orange-room" min="71,5,28" max="89,18,18"/>
			<rectangle name="purple-room" min="-67,5,18" max="-85,17,28"/>
		</union>
		<apply block="only-red" use="only-red">
			<rectangle name="orange-room" min="71,5,28" max="89,18,18"/>
			<rectangle name="purple-room" min="-67,5,18" max="-85,17,28"/>
		</apply>
		<apply enter="only-red" message="You may not enter your own wool room!">
			<rectangle name="orange-room" min="71,5,28" max="89,18,18"/>
			<rectangle name="purple-room" min="-67,5,18" max="-85,17,28"/>
		</apply>
</regions>
<modes>
    <mode after="10m" material="gold block" name="GOLD CORE MODE"/>
    <mode after="30m" material="glass" name="GLASS CORE MODE"/>
</modes>
<cores material="obsidian" leak="5" mode-changes="true">
    <core team="blue">
        <cuboid min="-0,15,17" max="5,22,11"/>
    </core>
    <core team="red">
        <cuboid min="-1,15,-54" max="4,22,-60"/>
    </core>
</cores>
<timelock>on</timelock>
<itemremove>
    <item>obsidian</item>
    <item>gold block</item>
    <item>glass</item>
    <item>shears</item>
</itemremove>
<toolrepair>
    <tool>diamond pickaxe</tool>
</toolrepair>
     <maxbuildheight>43</maxbuildheight>
	<wools>
	    <wool team="blue" color="lime">
			<block location="4,11,55"/>
		</wool>
		<wool team="blue" color="yellow">
			<block location="0,11,55"/>
		</wool>
		<wool team="red" color="orange">
			<block location="-0,11,-98"/>
		</wool>
		<wool team="red" color="purple">
			<block location="3,11,-98"/>
		</wool>
	</wools>
</map>
