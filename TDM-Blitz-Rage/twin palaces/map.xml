<?xml version="1.0"?>
<map proto="1.3.3">
<name>Twin Palaces - TDM</name>
<version>1.0.0</version>
<objective>Be the team with the least amount of deaths after 15 minutes.</objective>
<authors>
    <author uuid="c26e7a7f-b4ce-4ebc-ac4d-f60691915d23"/> <!-- Get_Rekt -->
</authors>
<contributors>
<contributor uuid="420f6dd9-5b46-432a-805c-8f6d2fa01e23" contribution="Lots of help with worldedit"/>
<!--  Collidedmoon  -->
</contributors>
<teams>
   <team color="yellow" max="24">yellow</team>
   <team color="pink" max="24">pink</team>
</teams>
<spawns>
    <spawn team="yellow" kit="yellow" yaw="0">
        <point>0,47,-70</point>
    </spawn>
    <spawn team="pink" kit="pink" yaw="180">
        <point>047,70,-833.5</point>
    </spawn>
    <default yaw="-90">
        <point>97,100,0</point>
    </default>
</spawns>
<kits>
    <kit name="spawn">
         <item slot="0" enchantment="durability:10">stone sword</item>
         <item slot="1">bow</item>
         <item slot="3" amount="32">arrow</item>
         <item slot="4" amount="1">golden apple</item>
         <item slot="5" amount="32">golden carrot</item>
         <potion duration="3" amplifier="20">regeneration</potion>
    </kit>
    <kit name="yellow" parents="spawn">
        <chestplate enchantement="protection projectile:1;protection environmental:1">chainmail chestplate</chestplate>
        <leggings color="E5E533">leather leggings</leggings>
        <boots color="E5E533">leather boots</boots>
    </kit>
    <kit name="pink" parents="spawn">
        <chestplate enchantement="protection projectile:1;protection environmental:1">chainmail chestplate</chestplate>
        <leggings color="F17FA4">leather leggings</leggings>
        <boots color="F17FA4">leather boots</boots>
    </kit>
</kits>
<score>
    <time>15m</time>
</score>
<timelock>off</timelock>
<regions>
    <apply block="deny-all">
        <rectangle min="-oo,-oo" max="oo,oo"/>
    </apply>
    <apply enter="only-pink" message="You may not enter the enemy base!">
        <cylinder base="0,47,70" radius="5" height="100"/>
    </apply>
    <apply enter="only-yellow" message="You may not enter the enemy base!">
        <cylinder base="0,47,-70" radius="5" height="100"/>
    </apply>
</regions>
<filters>
    <filter name="only-yellow">
        <team>yellow</team>
    </filter>
    <filter name="only-pink">
        <team>pink</team>
    </filter>
</filters>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>chainmail chestplate</item>
    <item>leather leggings</item>
    <item>leather boots</item>
    <item>golden apple</item>
    <item>golden carrot</item>
</itemremove>
<killreward>
    <item amount="6">arrow</item>
    <item amount="1">golden apple</item>
    <item amount="2">exp bottle</item>
</killreward>
</map>
