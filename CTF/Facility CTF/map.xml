<map proto="1.4.0">
<name>Facility CTF</name>
<version>1.7</version>
<objective>Captura las banderas y consige la mejor puntuacion en 12 minutos.</objective>
<authors>
    <author uuid="e8d1ad63-bd9e-4d0e-9a6c-27f2b047d924"/> <!-- Mikeg542 -->
</authors>
<contributors>
    <contributor uuid="459fd919-0d58-401a-9601-6cab1eb721ab" contribution="Tourney Edits"/> <!-- Reshif -->
    <contributor uuid="1c898c77-b0cc-474a-8ce4-b5521f2b18e7" contribution="CTF Edit"/> <!-- Prodigy4532 -->
</contributors>
<teams>
    <team id="red-team" color="dark red" min="1" max="7">Red</team>
    <team id="blue-team" color="blue" min="1" max="7">Blue</team>
</teams>
<spawns>
    <spawn team="blue-team" kit="blue-spawn">
        <regions yaw="-90"><cylinder base="-113,4,157" radius="0" height="1"/></regions>
    </spawn>
    <spawn team="red-team" kit="red-spawn">
        <regions yaw="90"><cylinder base="-101,4,41" radius="0" height="1"/></regions>
    </spawn>
    <default kit="obsKit">
        <regions yaw="-90">
            <cylinder base="-77,15,99" radius="1" height="2"/>
        </regions>
    </default>
</spawns>
<respawn delay="7s" auto="true" blackout="true"/>
<kits>
    <kit id="spawnKit">
        <item slot="0" damage="-3000">stone sword</item>
        <item slot="1" damage="-3000">bow</item>
        <item slot="2" amount="64">bread</item>
        <item slot="8" amount="12">arrow</item>
    </kit>
    <kit id="red-spawn" parents="spawnKit">
        <helmet color="cd0000" damage="-3000">leather helmet</helmet>
        <chestplate color="cd0000" damage="-3000">leather chestplate</chestplate>
        <leggings damage="-3000">chainmail leggings</leggings>
        <boots color="cd0000" enchantment="protection fall:2" damage="-3000">leather boots</boots>
    </kit>
    <kit id="blue-spawn" parents="spawnKit">
        <helmet color="0066cc" damage="-3000">leather helmet</helmet>
        <chestplate color="0066cc" damage="-3000">leather chestplate</chestplate>
        <leggings damage="-3000">chainmail leggings</leggings>
        <boots color="0066cc" enchantment="protection fall:2" damage="-3000">leather boots</boots>
    </kit>
    <kit id="red-flag-kit">
        <potion duration="oo" amplifier="-2" ambient="true">health boost</potion>
        <potion duration="oo">slowness</potion>
    </kit>
    <kit id="blue-flag-kit">
        <potion duration="oo" amplifier="-2" ambient="true">health boost</potion>
        <potion duration="oo">slowness</potion>
    </kit>
    <kit id="obsKit">
        <potion duration="oo">night vision</potion>
    </kit>
    <kit id="reset-kit" force="true">
        <potion duration="1" amplifier="0">health boost</potion>
        <potion duration="0" amplifier="10">slowness</potion>
    </kit>
</kits>
<filters>
    <team id="red-only">red-team</team>
    <team id="blue-only">blue-team</team>
    <time id="flag-respawns">0</time>
    <filter name="no-red" parents="deny-all">
        <allow><team>blue</team></allow>
    </filter>
    <filter name="no-blue" parents="deny-all">
        <allow><team>red</team></allow>
    </filter>
</filters>
<regions>
    <apply block="never">
        <region><everywhere/></region>
    </apply>

    <cylinder id="blue-net" base="-106.5,4,157.5" radius="4" height="2" />
    <cylinder id="red-net" base="-106,4,41.5" radius="4" height="2" />

    <apply enter="no-red" message="You may not enter the enemies spawn!">
         <rectangle min="-93,144" max="-121,164"/>
    </apply>
    <apply enter="no-blue" message="You may not enter the enemies spawn!">
         <rectangle min="-121,54" max="-93,35"/>
    </apply>
</regions>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<flags flag-proximity-metric="closest player">
    <flag id="north-red-flag" name="Right Blue Flag" owner="red-team" pickup-kit="red-flag-kit" drop-kit="reset-kit">
        <post pickup-filter="blue-only" recover-time="15s" respawn-time="5s">-137.5,8,55.5</post>
    </flag>
    <flag id="south-red-flag" name="Left Blue Flag" owner="red-team" pickup-kit="red-flag-kit" drop-kit="reset-kit">
        <post pickup-filter="blue-only" recover-time="15s" respawn-time="5s">-75.5,8,55.5</post>
    </flag>
    <flag id="south-blue-flag" name="Left Red Flag" owner="blue-team" pickup-kit="blue-flag-kit" drop-kit="reset-kit">>
        <post pickup-filter="red-only" recover-time="15s" respawn-time="5s">-75.5,8,143.5</post>
    </flag>
    <flag id="north-blue-flag" name="Right Red Flag" owner="blue-team" pickup-kit="blue-flag-kit" drop-kit="reset-kit">>
        <post pickup-filter="red-only" recover-time="15s" respawn-time="5s">-137.5,8,143.5</post>
    </flag>
    <flags points="5">
        <net region="red-net" flag="north-blue-flag south-blue-flag" respawn-filter="flag-respawns"/>
        <net region="blue-net" flag="north-red-flag south-red-flag" respawn-filter="flag-respawns"/>
    </flags>
</flags>
<time>12m</time>
<score>
    <limit>-1</limit>
    <kills>1</kills>
    <deaths>1</deaths>
</score>
<killreward>
    <item amount="5">arrow</item>
</killreward>
<itemremove>
    <item>bread</item>
    <item>bow</item>
    <item>stone sword</item>
    <item>iron sword</item>
    <item>blaze rod</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
    <item>potion</item>
</itemremove>
<timelock>on</timelock>
</map>