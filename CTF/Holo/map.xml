<map proto="1.4.0">
<name>Holo</name>
<version>1.1.1</version>
<objective>Cap the other team's flag more times.</objective>
<authors>
    <author uuid="2958ea4c-3501-404e-88cc-12e8632f68cc"/> <!-- NixaniaXi -->
</authors>
<flags flag-proximity-metric="closest player">
	<flag id="blue-flag-post" name="Blue Flag" owner="blue" pickup-kit="flag-kit" drop-kit="reset-kit">
		<post pickup-filter="red-only" recover-time="12s" respawn-time="12">0.5,9,-17.5</post>
	</flag>
	<flag id="red-flag-post" name="Red Flag" owner="red" pickup-kit="flag-kit" drop-kit="reset-kit">
		<post pickup-filter="blue-only" recover-time="12s" respawn-time="12">0.5,9,18.5</post>
	</flag>
	<flags points="1">
		<net region="red-net" flag="red-flag-post" respawn-filter="flag-respawns"/>
		<net region="blue-net" flag="blue-flag-post" respawn-filter="flag-respawns"/>
	</flags>
</flags>
<time>12m</time>
<score>
    <limit>-1</limit>
</score>
<teams>
   <team id="red" color="dark red" max="5" max-overfill="5">Red</team>
   <team id="blue" color="blue" max="5" max-overfill="5">Blue</team>
</teams>
<kits>
    <kit id="spawn">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true">bow</item>
        <item slot="8" amount="12">arrow</item>
        <potion duration="3" amplifier="225">slow</potion>
        <potion duration="3" amplifier="-25">jump</potion>
        <potion duration="3" amplifier="5">blindness</potion>
        <potion duration="3" amplifier="5">heal</potion>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="cd0000" unbreakable="true">leather helmet</helmet>
        <chestplate color="cd0000" unbreakable="true">leather chestplate</chestplate>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <boots color="cd0000" enchantment="protection fall:2" unbreakable="true">leather boots</boots>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="0066cc" unbreakable="true">leather helmet</helmet>
        <chestplate color="0066cc" unbreakable="true">leather chestplate</chestplate>
        <leggings unbreakable="true">chainmail leggings</leggings>
        <boots color="0066cc" enchantment="protection fall:2" unbreakable="true">leather boots</boots>
    </kit>
    <kit id="flag-kit">
        <potion duration="oo" amplifier="-2" ambient="true">health boost</potion>
        <potion duration="oo">slowness</potion>
    </kit>
    <kit id="reset-kit" force="true">
        <potion duration="1" amplifier="0">health boost</potion>
        <potion duration="0" amplifier="10">slowness</potion>
    </kit>
    <kit name="red-kit-after-first-spawn" parents="spawn">
        <helmet unbreakable="true" color="993333">leather helmet</helmet>
        <chestplate unbreakable="true" enchantment="protection projectile:1" color="993333">leather chestplate</chestplate>
        <boots unbreakable="true" color="993333">leather boots</boots>
        <potion duration="5" amplifier="5">slow</potion>
        <potion duration="5" amplifier="-5">jump</potion>
        <potion duration="5" amplifier="5">blindness</potion>
        <potion duration="5" amplifier="5">heal</potion>
    </kit>
    <kit name="blue-kit-after-first-spawn" parents="spawn">
        <helmet unbreakable="true" color="334CB2">leather helmet</helmet>
        <chestplate unbreakable="true" enchantment="protection projectile:1" color="334CB2">leather chestplate</chestplate>
        <boots unbreakable="true" color="334CB2">leather boots</boots>
        <potion duration="5" amplifier="5">slow</potion>
        <potion duration="5" amplifier="-5">jump</potion>
        <potion duration="5" amplifier="5">blindness</potion>
        <potion duration="5" amplifier="5">heal</potion>
    </kit>
</kits>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<timelock>on</timelock>
<filters>
    <team id="red-only">red-team</team>
    <team id="blue-only">blue-team</team>
    <time id="flag-respawns">0</time>
</filters>
<regions>
    <block id="red-net">0.5,9,-17.5</block>
    <block id="blue-net">0.5,9,18.5</block>
    <apply block="deny-all" message="You may not modify blocks!">
         <rectangle min="oo,oo" max="-oo,-oo"/>
    </apply>
</regions>
<spawns>
    <spawn team="red" kit="red-kit">
        <regions yaw="180">
            <block id="red-spawn">0.5,4,40.5</block>in
        </regions>
    </spawn>
    <spawn team="blue" kit="blue-kit">
        <regions yaw="0">
            <block id="blue-spawn">0.5,4,-39.5</block>
        </regions>
    </spawn>
    <default>
        <regions yaw="0">
            <block id="spawnpoint">0.5,7,0.5</block>
        </regions>
    </default>
</spawns>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>