<map proto="1.3.0">
  <name>Fairy Tales 2: A Tale or Two TE</name>
  <version>1.4</version>
  <objective>
     Take the enemy's wool located in bedrock castles on the enemy's side and place it in your victory monument.
  </objective>
    <authors>
        <author uuid="2e28d256-4656-4f37-bcdc-5fab21b0f70f"/>
        <!--  D347HxD  -->
    </authors>
    <contributors>
        <contributor uuid="82c796a5-c033-43be-af30-fa06496995f9" contribution="Team Spawn Beautification"/>
        <!--  IM_A_H0B0  -->
        <contributor uuid="ccb7a66f-ed6c-4f8d-953e-78205c33abba" contribution="Map Design"/>
        <!--  GabeisAwesome199  -->
